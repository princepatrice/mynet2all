{% extends 'layout/layout.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

    <section class="content">
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-xs-12 col-sm-3">
                    <div class="card profile-card">
                        <div class="profile-header">&nbsp;</div>
                        <div class="profile-body">
                            <div class="image-area">
                                <img src="{{user.url_image??asset('images/user.png')}}" alt="profile" width="100px />
                            </div>
                            <div class="content-area">
                                <h3>{{user.nom??""}} {{user.prenoms??""}}</h3>
                                <p>{% if user.type == 1 %} PARTICULIER {% elseif user.type == 6 %} ENTREPRISE {%endif%}</p>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-xs-12 col-sm-9">
                    <div class="card">
                        <div class="body">
                            <div>
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Profile</a></li>
                                    <li role="presentation"><a href="#profile_settings" aria-controls="settings" role="tab" data-toggle="tab">Information personnel</a></li>
                                    <li role="presentation"><a href="#change_password_settings" aria-controls="settings" role="tab" data-toggle="tab">Mot de passe</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade in active" id="home">
                                        <div class="panel panel-default panel-post">
                                           
                                            <div class="panel-body">
                                                <div class="post">
                                               
                                                    <div class="post-content" style="" >
                                                       <figure style="text-align:center" class="row"> 
                                                       <span class="col-lg-2"></span>
                                                       <img class="col-lg-8" src="{{user.url_image??asset('images/user.png')}}" class="img-responsive" style="max-height:200px"/></figure>
                                                        <span class="col-lg-2"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel-footer">
                                          

                                                 <form class="form-group" action ="{{path('profile-update-photo')}}" method="POST" enctype="multipart/form-data" >
                                                    <div class="form-line">
                                                        <input type="file" class="form-control" id="imgupload" name="file"  required />
                                                    </div>
                                                    <div class="form-line1" style="float:right">
                                                    <br/>
                                                            <button type="submit" class="btn btn-danger">Enregistrer</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                    <div role="tabpanel" class="tab-pane fade in" id="profile_settings">
                                        <form class="form-horizontal" method="POST" action="{{path('profile-update-info')}}">
                                          {% if user.type == 6 %}  
                                              <div class="form-group">
                                                <label for="NameSociety" class="col-sm-2 control-label">Nom de l'entreprise</label>
                                                <div class="col-sm-10">
                                                    <div class="form-line">
                                                        <input type="text" class="form-control" id="NameSociety" name="nom_entreprise" placeholder="Nom de l'entreprise" value="{{user.nom_entreprise??""}}" required>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            <div class="form-group">
                                                <label for="NameSurname" class="col-sm-2 control-label">Nom</label>
                                                <div class="col-sm-10">
                                                    <div class="form-line">
                                                        <input type="text" class="form-control" id="NameSurname" name="nom" placeholder="Nom" value="{{user.nom}}" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="MiddleName" class="col-sm-2 control-label">Prenom(s)</label>
                                                <div class="col-sm-10">
                                                    <div class="form-line">
                                                        <input type="text" class="form-control" id="MiddleName" name="prenoms" placeholder="Prenom(s)" value="{{user.prenoms}}" required>
                                                    </div>
                                                </div>
                                            </div>
    
                                            <div class="form-group">
                                                <div class="col-sm-offset-2 col-sm-10">
                                                    <button type="submit" class="btn btn-danger">Enregistrer</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade in" id="change_password_settings">
                                        <form class="form-horizontal"  method="POST" action="{{path('profile-update-password')}}">
                                            <div class="form-group">
                                                <label for="OldPassword" class="col-sm-3 control-label">Ancien mot de passe</label>
                                                <div class="col-sm-9">
                                                    <div class="form-line">
                                                        <input type="password" class="form-control" id="OldPassword" name="old_pwd" placeholder="Old Password" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="NewPassword" class="col-sm-3 control-label">Mot de passe</label>
                                                <div class="col-sm-9">
                                                    <div class="form-line">
                                                        <input type="password" class="form-control" id="NewPassword" name="password" placeholder="New Password" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="NewPasswordConfirm" class="col-sm-3 control-label"> Confirmer le mot de passe</label>
                                                <div class="col-sm-9">
                                                    <div class="form-line">
                                                        <input type="password" class="form-control" id="NewPasswordConfirm" name="cpassword" placeholder="New Password (Confirm)" required>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-sm-offset-3 col-sm-9">
                                                    <button type="submit" class="btn btn-danger">SUBMIT</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
